package Graphique;

import org.newdawn.slick.Graphics;

/**
 *
 * @author wail
 */
public class Camera {
    
    
    
    
    public void render(Graphics g, float x, float y,float camX, float camY){
        
        
           
           
           if(x > 0 && x >= 640 || y > 0 && y >= 640){
              
                   g.translate(-camX, -camY); 
           }
       
        
    }
}
